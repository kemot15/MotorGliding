@model Order
@{
    Layout = "_AppLayout";
}
@await Html.PartialAsync("Dashboard/_OrderPreviewAppPartialView", Model)
<div class="col-xl-8 col-lg-12 tm-md-12 tm-sm-12 tm-col">
    <div class="bg-white tm-block h-100">
        <div class="table-responsive">
            <table class="table table-hover table-striped tm-table-striped-even mt-3">
                <thead>
                    <tr class="tm-bg-gray">
                        <th scope="col">Wydarzenie</th>
                        <th scope="col" class="text-center">Ilość</th>
                        <th scope="col" class="text-center">Cena</th>
                        <th scope="col" class="text-center">Koszt</th>
                    </tr>
                </thead>
                <tbody>
                    @{var sum = 0.0; }
                    @foreach (var order in Model.OrderDetails)
                    {
                        sum += order.Price * order.Quantity;
                        <tr>                            
                            <td class="tm-product-name">@order.EventTitle</td>
                            <td class="text-center">@order.Quantity</td>
                            <td class="text-center">@order.Price</td>
                            <td class="text-center">@sum</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="tm-table-mt tm-table-actions-row">
            <div class="tm-table-actions-col-right">
                <a type="button" asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-info">Wstecz</a>
            </div>           
        </div>
    </div>
</div>

