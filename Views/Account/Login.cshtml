@model LoginViewModel
@{
    Layout = "_Layout";
}
    <body class="bg03">
        <div class="container">
            <div class="row tm-mt-big">
                <div class="col-12 mx-auto tm-login-col">
                    <div class="bg-white tm-block">
                        <div class="row">
                            <div class="col-12 text-center">
                                <i class="fas fa-3x fa-tachometer-alt tm-site-icon text-center"></i>
                                <h2 class="tm-block-title mt-3">Rejestracja</h2>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <form asp-action="Index" asp-controller="Home" method="post" class="tm-login-form">
                                    <div class="input-group">
                                        <label asp-for="Email" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label" placeholder="podaj adres email">Login</label>
                                        <input asp-for="Email" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" required>
                                    </div>
                                    <div class="input-group">
                                        <label asp-for="Password" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label" placeholder="podaj hasło">Hasło</label>
                                        <input asp-for="Password" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" required>
                                    </div>
                                    <div class="input-group mt-3">
                                        <button type="submit" class="btn btn-primary d-inline-block mx-auto">Zaloguj</button>
                                    </div>
                                    <div class="input-group mt-3">
                                        <p><em>Walidacja</em></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
