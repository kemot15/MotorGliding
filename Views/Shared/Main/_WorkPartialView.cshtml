@model IList<Image>
    <section id="work" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="section-title">
                        <h2>Galeria</h2>
                        <span class="line-bar">...</span>
                    </div>
                </div>
                <div class="swiper-container">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->
                        @foreach (var image in Model)
                        {
                            <div class="col-md-3 col-sm-6 swiper-slide">
                                <!-- WORK THUMB -->
                                <div class="work-thumb">
                                    <a href="~/@MotorGliding.Models.Other.Folders.gallery.ToString()/@image.Name" class="image-popup">
                                        <img src="../@MotorGliding.Models.Other.Folders.gallery.ToString()/@image.Name" class="img-responsive d-block w-100" alt="SkyClub">

                                        <div class="work-info">
                                            <h3>SkyClub</h3>
                                            <small>Loty widokowe</small>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- If we need navigation buttons -->
                    @*<div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>*@
                </div>
            </div>
        </div>
    </section>