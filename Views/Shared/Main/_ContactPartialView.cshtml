@model EmailViewModel
<section id="contact" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2>Zaprzaszmy do kontaktu</h2>
                    <span class="line-bar">...</span>
                </div>
            </div>

            <div class="col-md-8 col-sm-8">

                <!-- CONTACT FORM HERE -->
                <form id="contact-form" role="form" method="post">
                    @*asp-action="SendEmail" asp-controller="Home"*@
                    <div class="col-md-12 col-sm-12">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Imię i nazwisko" required="">
                    </div>

                    <div class="col-md-6 col-sm-6">
                        <input type="email" asp-for="Email" class="form-control" placeholder="E-mail" required="">
                    </div>

                    <div class="col-md-6 col-sm-6">
                        <input type="number" asp-for="Phone" class="form-control" placeholder="Telefon" required="">
                    </div>


                    <div class="col-md-12 col-sm-12">
                        <textarea class="form-control" asp-for="Message" rows="6" placeholder="Wiadomość..." required=""></textarea>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <input type="submit" id="email-button" class="form-control" name="submit" value="Wyślij wiadomość">
                    </div>

                </form>
            </div>

            <div class="col-md-4 col-sm-4">
                <div class="google-map">
                    <!-- How to change your own map point
                            1. Go to Google Maps
                            2. Click on your location point
                            3. Click "Share" and choose "Embed map" tab
                            4. Copy only URL and paste it within the src="" field below
                    -->
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2504.7387583734403!2d17.049918215994435!3d51.113279979572205!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470fe9d6a3657a55%3A0x2d8e03c1b30133e!2sSzczytnicka%2011%2C%20Wroc%C5%82aw!5e0!3m2!1spl!2spl!4v1589298632768!5m2!1spl!2spl" allowfullscreen></iframe>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="~/js/contact.js"></script>