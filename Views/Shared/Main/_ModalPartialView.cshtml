@model RegLogViewModel
<section class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-popup">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-md-12 col-sm-12">
                            <div class="modal-title">
                                <h2>BuzzTandem</h2>
                            </div>

                            <!-- NAV TABS -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="active"><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Logowanie</a></li>
                                <li><a href="#sign_up" aria-controls="sign_up" role="tab" data-toggle="tab">Rejestracja</a></li>
                            </ul>

                            <!-- TAB PANES -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="sign_in">
                                    <form asp-action="Login" asp-controller="Account" method="post">
                                        <input asp-for="LoginViewModel.Email" class="form-control" placeholder="Email" required>
                                        <input asp-for="LoginViewModel.Password" type="password" class="form-control" placeholder="Password" required>
                                        <input type="submit" class="form-control" name="submit" value="Zaloguj">
                                        @*<a href="https://www.facebook.com/templatemo">Forgot your password?</a>*@
                                    </form>
                                    
                                </div>

                                <div role="tabpanel" class="tab-pane fade in" id="sign_up">
                                    <form asp-action="Registration" asp-controller="Account" method="post">
                                        <input asp-for="RegistrationViewModel.UserName" type="text" class="form-control" placeholder="Name" required>
                                        <input asp-for="RegistrationViewModel.Email" class="form-control" placeholder="Email" required>
                                        <input asp-for="RegistrationViewModel.Password" class="form-control" placeholder="Password" required>
                                        <input asp-for="RegistrationViewModel.RepeatPassword" class="form-control" placeholder="Powtórz hasło" required>
                                        <input type="submit" class="form-control" name="submit" value="Zarejestruj">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>