<!-- ABOUT -->
@if (Model.Vehicle.Count > 0)
{
    <section id="about" data-stellar-background-ratio="0.5">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            @for (int i = 0; i < Model.Vehicle.Count; i++)
            {
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" @(Html.Raw(i == 0 ? "class=\"active\"" : ""))></li>
                </ol>
            }
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Vehicle.Count; i++)
                {

                    <div class="carousel-item  @(Html.Raw(i==0 ? "class=\"active\"" : ""))">
                        <div class="container">
                            <div class="row">

                                <div class="col-md-5 col-sm-6">
                                    <div class="about-info">
                                        <div class="section-title">
                                            <h2>Sprzęt</h2>
                                            <span class="line-bar">...</span>
                                        </div>
                                        <p><em>@Model.Vehicle[i].Name</em> - @Model.Vehicle[i].Description</p>
                                    </div>
                                </div>

                                <div class="col-md-3 col-sm-6">
                                    <div class="about-info skill-thumb">
                                        @foreach (var feature in Model.Vehicle[i].Features)
                                        {
                                            <strong>@feature.Name</strong>
                                            <span class="pull-right">@feature.Value%</span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="@feature.Value" aria-valuemin="0" aria-valuemax="100" style="width:@feature.Value%"></div>
                                            </div>
                                        }


                                    </div>
                                </div>

                                <div class="col-md-4 col-sm-12">
                                    <div class="about-image">
                                        <img src="@Model.Vehicle[i].Images.First().Name" class="img-responsive" alt="">
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                }
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
}

